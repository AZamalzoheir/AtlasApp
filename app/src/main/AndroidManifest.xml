        android:theme="@style/AppTheme">
        <activity
            android:name=".home.HomePage"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainPage"
            android:label="@string/title_activity_main_page"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".goals"
            android:screenOrientation="landscape" />
        <activity
            android:name=".secondGoal"
            android:label="@string/tab_text_2"
            android:screenOrientation="landscape" />
        <activity
            android:name=".answers.AnswerMCQ"
            android:screenOrientation="landscape" />
        <activity
            android:name=".AnswerMSQTrueAndFalse"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Thirdgoal"
            android:screenOrientation="landscape" />
        <activity
            android:name=".FourthGoal"
            android:screenOrientation="landscape" />
        <activity
            android:name=".FifthGoal"
            android:screenOrientation="landscape" />
        <activity
            android:name=".SixthGoal"
            android:screenOrientation="landscape" />
